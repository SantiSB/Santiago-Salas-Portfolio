---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import GitHubIcon from "../icons/GitHubIcon.astro";
import MailIcon from "../icons/MailIcon.astro";
import Briefcase from "../icons/Briefcase.astro";
import CodeIcon from "../icons/CodeIcon.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
---

<Layout
  title="Lio Messi Portfolio - Web Developer - 4 Years of Experience"
  description="Contrata a Lio Messi"
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-24">
      <h1 class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6  lg:pb-10">
        Hola ! Soy Lio Messi <a
          class="flex justify-center items-center"
          href="https://www.linkedin.com/in/santiagosalasbolaños"
          target="_blank"><Badge>Disponible para trabajar</Badge></a
        >
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>+4 años de experiencia.</span>
        <span class="text-amber-400">Desarrollador frontend</span><span>
          especializado en</span
        >
        <span class="text-sky-500">React</span>
      </h2>
      <nav class="flex flex-wrap gap-4 mt-6">
        <SocialPill href="https://www.linkedin.com/in/santiagosalasbolaños">
          <LinkedInIcon class="size-4 md:size-6" />LinkedIn
        </SocialPill>
        <SocialPill href="https://www.github.com/SantiSB/SantiSB">
          <GitHubIcon class="size-4 md:size-6" />GitHub
        </SocialPill>
        <SocialPill href="mailto:a.santiago.salas.b@gmail.com">
          <MailIcon class="size-4 md:size-6" />a.santiago.salas.b@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class="text-2xl font-semibold mb-b flex gap-x-2 items-center">
        <Briefcase class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="proyectos">
      <h2 class="text-2xl font-semibold mb-b flex gap-x-2 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
