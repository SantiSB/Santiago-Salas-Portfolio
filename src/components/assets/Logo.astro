<script>
  document.addEventListener("DOMContentLoaded", () => {
    const themeToggleButton = document.getElementById("theme-toggle");

    function updateIconColor(): void {
      // `querySelectorAll` devuelve todos los elementos que coinciden con el selector.
      const logos = document.querySelectorAll<SVGElement>(".mainLogo");

      logos.forEach((logo) => {
        if (logo) {
          if (
            localStorage.getItem("color-theme") === "dark" ||
            (!("color-theme" in localStorage) &&
              window.matchMedia("(prefers-color-scheme: dark)").matches)
          ) {
            logo.style.fill = "#2df6fc";
          } else {
            logo.style.fill = "#115968";
          }
        }
      });
    }

    updateIconColor();

    if (themeToggleButton) {
      themeToggleButton.addEventListener("click", updateIconColor);
    }
  });
</script>
