---
const { project } = Astro.props;
---

<div
  class="max-w-sm bg-gray-300/20 dark:bg-black/20 border border-blue-900 dark:border-blue-400 rounded-lg overflow-hidden flex flex-col shadow-md"
>
  <a href={project.image}>
    <img class="w-full h-48 object-cover" src={project.image} alt="" />
  </a>
  <div class="p-4">
    <a href="#">
      <h5 class="mb-2.5 text-blue-900 dark:text-blue-400 text-lg font-bold">{project.title}</h5>
    </a>
    <p class=" text-sm overflow-auto h-24">{project.description}</p>
    <div class="h-10 overflow-x-auto whitespace-nowrap">
      <ul class="flex gap-1 p-1 list-none">
        {
          project.tags?.map((tag: any) => (
            <li>
              <span
                class={`flex items-center gap-1 px-2.5 py-1 rounded-full text-xs ${tag.class}`}
              >
                <tag.icon class="w-4 h-4" />
              </span>
            </li>
          ))
        }
      </ul>
    </div>
    <!-- Botones -->
    {
      project.link && (
        <a
          href={project.link}
          class="h-10 inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-blue-100/20 border border-blue-900 dark:border-blue-400 text-blue-900 dark:text-blue-400 hover:bg-black dark:hover:bg-white hover:text-white dark:hover:text-black hover:border-black dark:hover:border-white transition-colors mt-4"
        >
          Visit
          <svg
            class="ml-2 w-3.5 h-3.5"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 5h12m0 0L9 1m4 4L9 9"
            />
          </svg>
        </a>
      )
    }
    {
      project.repo && (
        <a
          href={project.repo}
          class="h-10 inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-blue-100/20 border border-blue-900 dark:border-blue-400 text-blue-900 dark:text-blue-400 hover:bg-black dark:hover:bg-white hover:text-white dark:hover:text-black hover:border-black dark:hover:border-white transition-colors mt-2"
        >
          Repo
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon ml-2"
          >
            <path
              fill="none"
              d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
            />
          </svg>
        </a>
      )
    }
  </div>
</div>
