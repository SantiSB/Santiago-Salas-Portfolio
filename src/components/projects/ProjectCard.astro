---
const { project } = Astro.props;
---

<div class="max-w-sm bg-black/30 border border-ligthBlue rounded-lg shadow">
  <a href="#">
    <img class="rounded-t-lg" src={project.imagen} alt="" />
  </a>
  <div class="p-5">
    <a href="#">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-ligthBlue">
        {project.title}
      </h5>
    </a>
    <p class="mb-3 font-normal text-white">
      {project.description}
    </p>
    <a
      href={project.link}
      class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-blue bg-opacity-20 border border-blue text-ligthBlue hover:bg-white hover:text-black hover:border-white transition"
    >
      Visit
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</div>
