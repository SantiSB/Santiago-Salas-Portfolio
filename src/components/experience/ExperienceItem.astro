---
export interface Props {
  title: string;
  description: string;
  date: string;
  link?: string;
}
const { title, description, date, link } = { ...Astro.props };
---

<div
  class="absolute w-3 h-3 bg-white rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<time class="mb-1 text-sm font-normal leading-none opacity-80">{date}</time>
<h3 class="text-xl text-ligthBlue font-bold">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-pretty text-white">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-blue bg-opacity-20 border border-blue text-ligthBlue hover:bg-white hover:text-black hover:border-white transition"
    >
      Learn more
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
