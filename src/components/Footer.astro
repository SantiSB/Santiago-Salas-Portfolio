---
import MailIcon from "../icons/MailIcon.astro";
import CallIcon from "../icons/CallIcon.astro";
---

<footer class="bg-black rounded-lg shadow dark:bg-blue">
  <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <a
        href="#"
        class="flex justify-center items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse"
      >
        <img
          src="/SantiHub.svg"
          class="h-8"
          alt="Santiago Salas Bolaños Logo"
        />
        <span
          class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
          >Santiago Salas Bolaños</span
        >
      </a>
      <ul
        class="flex justify-center flex-wrap items-center mb-6 text-sm font-medium text-ligthBlue sm:mb-0 dark:text-blue gap-x-6"
      >
        <li>
          <a
            class="flex justify-center items-center gap-x-2 hover:text-white hover:scale-105 transition font-light"
            href="tel:+573113582648"
          >
            <CallIcon class="size-4 md:size-6" />+573113582648</a
          >
        </li>
        <li>
          <a
            class="flex justify-center items-center gap-x-2 hover:text-white hover:scale-105 transition font-light"
            
            href="mailto:a.santiago.salas.b@gmail.com"
          >
            <MailIcon class="size-4 md:size-6" />a.santiago.salas.b@gmail.com</a
          >
        </li>
      </ul>
    </div>
    <hr class="my-6 border-blue sm:mx-auto dark:border-blue lg:my-8" />
    <span class="block text-sm text-ligthBlue text-center dark:text-blue"
      >© 2024 <a href="https://flowbite.com/" class="hover:underline"
        >Santiago Salas Bolaños</a
      >. All Rights Reserved.</span
    >
  </div>
</footer>
