---
import LinkedIn from "../icons/LinkedIn.astro";
import Mail from "../icons/Mail.astro";
import Phone from "../icons/Phone.astro";
import Logo from "./assets/Logo.astro";
---

<footer
  id="contact"
  class="flex items-center border border-blue-900 dark:border-blue-400 rounded m-4 min-h-[100px] sm:h-auto"
>
  <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
    <div class="sm:flex sm:items-center sm:justify-between m-auto">
      <a
        href="#"
        class="flex justify-center items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse"
      >
        <Logo />
        <span
          class="text-blue-900 dark:text-blue-400 self-center text-2xl font-semibold whitespace-nowrap"
          >Santiago Salas Bolaños</span
        >
      </a>

      <ul
        class="flex justify-center flex-wrap items-center text-sm font-medium text-blue-900 dark:text-blue-400 sm:mb-0 dark:text-blue gap-x-6"
      >
        <li>
          <a
            class="flex justify-center items-center gap-x-2 hover:scale-105 transition font-light"
            href="https://www.linkedin.com/in/santiagosalasbolaños"
          >
            <LinkedIn class="size-4 md:size-6" />LinkedIn</a
          >
        </li>
        <li>
          <a
            class="flex justify-center items-center gap-x-2 hover:scale-105 transition font-light"
            href="tel:+573113582648"
          >
            <Phone class="size-4 md:size-6 fill-none" />+573113582648</a
          >
        </li>
        <li>
          <a
            class="flex justify-center items-center gap-x-2 hover:scale-105 transition font-light"
            href="mailto:a.santiago.salas.b@gmail.com"
          >
            <Mail
              class="size-4 md:size-6 fill-none"
            />a.santiago.salas.b@gmail.com</a
          >
        </li>
      </ul>
    </div>
  </div>
</footer>
